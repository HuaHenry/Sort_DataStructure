/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.title {
  font-size: 30px;
  font-weight: bold;
  margin-bottom: 25px;
}

.small-text {
  font-size: 12px;
}

.button-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button {
  width: 300px;
  height: 50px;
  margin-bottom: 10px;
  background-color: #007aff;
  color: #fff;
  border-radius: 15px;
  line-height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}